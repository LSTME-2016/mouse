#include <Event.h>
#include <Timer.h>

Timer t;

void setup() 
{
  pinMode(13, OUTPUT);
  Serial.begin(115200);
  t.every(2000, vypis);
}

void vypis()
{
    Serial.println("ahoj");
}

void loop() 
{
    while(1)
    {
        digitalWrite(13, 1);
        t.update();
        delay(100);
        digitalWrite(13,0);
        t.update();
        delay(100);
    }
}

















































































































































































































































































































































































































































